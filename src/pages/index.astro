---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="py-8 flex flex-col md:flex-row items-center md:items-start gap-8">
    <!-- Profile Image -->
    <img 
      src="/akash-profile.jpeg" 
      alt="Akash Sonowal" 
      class="w-40 h-40 rounded-full object-cover shadow-lg"
    />

    <!-- Intro Text -->
    <div>
      <h1 class="text-4xl font-bold mb-2">Akash Sonowal</h1>
      <p class="text-lg text-gray-600 mb-6">ML Engineer / Data Scientist</p>

      <!-- Current Work -->
      <div class="mb-4">
        <p class="text-gray-700">
          <span class="font-semibold">Current:</span> Data Scientist at 
          <span class="text-blue-600">NoBroker</span>
        </p>
      </div>

      <!-- Previous Experience -->
      <div class="mb-6">
        <p class="font-semibold text-gray-700">Previously at:</p>
        <ul class="list-disc list-inside text-gray-700 space-y-1">
          <li>Here Technologies — Machine Learning Engineer</li>
          <li>Mphasis — Data Scientist</li>
        </ul>
      </div>

      <!-- Bio -->
      <p class="text-lg text-gray-700 mb-6">
        I specialize in designing and deploying large-scale machine learning systems, 
        with a strong focus on performance, scalability, and impactful solutions.
      </p>

      <!-- CTA Button -->
      <a href="/projects" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        View My Work
      </a>
    </div>
  </section>
</Layout>
