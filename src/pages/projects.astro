---
import Layout from '../layouts/Layout.astro';

// Dynamic project list
const projects = [
  {
    title: "Intelligent Document Processing Platform",
    description: "Built an AI-powered document parsing pipeline capable of extracting structured data from millions of PDF files with 98% accuracy. The system processes over 100,000 documents daily and reduced manual processing time by 90%.",
    technologies: ["Python", "PyTorch", "AWS Lambda", "OCR", "FastAPI", "PostgreSQL"],
    year: "2025",
    impact: "100K+ docs/day processed",
    status: "Production"
  },
  {
    title: "Real-Time Recommendation Engine",
    description: "Designed and deployed a large-scale recommendation system serving personalized results to over 10M users daily. Implemented collaborative filtering and deep learning models with real-time feature engineering.",
    technologies: ["Scala", "Apache Spark", "Kubernetes", "Redis", "TensorFlow", "Kafka"],
    year: "2024",
    impact: "10M+ daily users",
    status: "Production"
  },
  {
    title: "ML System at Scale",
    description: "Developed a distributed ML pipeline for anomaly detection, processing billions of data points per day with sub-second latency. Built custom feature stores and real-time inference infrastructure.",
    technologies: ["TensorFlow", "Kafka", "Apache Flink", "AWS S3", "Docker", "Prometheus"],
    year: "2023",
    impact: "Billions of data points",
    status: "Production"
  },
  {
    title: "Computer Vision Analytics Platform",
    description: "Created an end-to-end computer vision platform for retail analytics, enabling real-time customer behavior analysis and inventory management through advanced image processing algorithms.",
    technologies: ["OpenCV", "YOLO", "Flask", "MongoDB", "AWS EC2", "React"],
    year: "2023",
    impact: "50+ retail locations",
    status: "Deployed"
  }
];
---

<Layout title="Projects">
  <section class="max-w-4xl py-12">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-bold mb-4 text-gray-900">Projects</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">A selection of my professional and personal work, focusing on scalable, impactful solutions.</p>
    </header>

    <div class="grid gap-8">
      {projects.map(project => (
        <div class="group border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-xl hover:border-gray-300 bg-white">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                {project.title}
              </h2>
              <div class="flex items-center gap-4 mt-2">
                <span class="text-sm text-gray-500">{project.year}</span>
                <span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-medium">
                  {project.status}
                </span>
                <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded-full text-xs font-medium">
                  {project.impact}
                </span>
              </div>
            </div>
          </div>
          
          <p class="text-gray-600 mb-6 leading-relaxed">{project.description}</p>
          
          <div class="space-y-3">
            <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">Technologies Used</h3>
            <div class="flex flex-wrap gap-2">
              {project.technologies.map(tech => (
                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-gray-200 transition-colors">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>
